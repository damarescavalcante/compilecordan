<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="damarescavalcante.compilecordan.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF" >


        <ImageView
            android:src="@drawable/img_cordova"
            android:layout_width="250dp"
            android:layout_weight="2"
            android:layout_height="150dp"
            android:layout_gravity="center"/>

        <TextView
            style="@style/ActivityMain"
            android:text="@string/lbl_title_compile_cordan"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginBottom="15dp" />


        <TextView
            style="@style/ActivityMain"
            android:text="@string/lbl_text_description"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal" />

        <Button
            style="@style/AppBtnMain"
            android:layout_marginBottom="20dp"
            android:text="@string/lbl_btn_start"
            android:onClick="startSecondActivity"/>
    </LinearLayout>


</ScrollView>
